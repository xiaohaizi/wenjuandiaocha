.container {
  display: flex;
  flex-direction: column;
}

.mine-backgr {
  width: 100%;
  height: 500rpx;
 
  margin-bottom: 10px;
}

.mine-info {
  flex-direction: column;
  margin-top: 10px;
}

.mine-flag {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-left: 10px;
}

.mine-info text {
  vertical-align: middle;
  color: #fff;
  font-size: 12px;
  margin-left: 10px;
  line-height: 50rpx;
}

.user-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: seagreen;
  vertical-align: middle;
  overflow: hidden;
}

.userAvaterImg {
  width:200rpx;
  height:200rpx;
  border-radius:50%;
  background:seagreen;
  vertical-align:middle;
  overflow:hidden;
  margin:0 auto;
  margin-top:40px;
}

.userName {
  display:flex;
  align-items:center;
  color:#fff;
  justify-content:center;
  margin-top: 40rpx;
}

.user {
  display: flex;
  margin: 25px auto;
  flex-direction: column;
  align-items: center;
}

.user text {
  color: #fff;
  margin-top: 52rpx;
  display: block;
  text-align: center;
  font-size: 16px;
  padding: 0 5%;
}

.mine {
  width: 100%;
  height: 50rpx;
  background: #fff;
  margin: 10px 0;
  margin-top: 0px;
  position: relative;
  padding: 12px 0;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #d6d6d6;
  border-top: 1px solid #d6d6d6;
}

.mine text {
  margin-left: 10px;
  height: 50rpx;
  vertical-align: middle;
  color: #707070;
  line-height: 50rpx;
  font-size: 30rpx;
}

.mine-img,
.more {
  height: 100%;
  vertical-align: middle;
}

.mine-img {
  width: 50rpx;
  height: 50rpx;
  margin-left: 10px;
  vertical-align: middle;
}

.more {
  width: 50rpx;
  height: 50rpx;
  margin-left: auto;
  margin-right: 10px;
}