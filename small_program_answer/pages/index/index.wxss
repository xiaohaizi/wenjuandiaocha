page {
  width: 100%;
  margin: 0 auto;
  /*  background: url(../../images/a.jpg);*/
}

swiper {
    width: 100%;
    height: 400rpx;
    border-bottom: 20px;
}

swiper image {
    width: 100%;
    height: 100%;
}

.index-content {
    box-sizing: border-box;
    width: 100%;
    /* height: 360rpx; */
    /* padding: 0 20rpx; */
    display: flex;
    flex-direction: column;
}





.shadow {
    width: 100%;
    height: 100%;
    /*background: rgba(0, 0, 0, 0.35);*/
    position: absolute;
    display: block;
    z-index: 1;
    border-radius: 10px;
}

.half {
    height: 16rem;
    position: relative;
    margin: 30rpx;
    box-shadow: 0 0 5px #333;
    margin-bottom: 5px;
    border-radius: 10px;
}

/* 在text的外层盒子中使用display:flex + align-items:center + justify-content:center 使text的文字垂直居中显示 */

.text {
    z-index: 2;
    position: absolute;
    color: #000;
    line-height: 280rpx;
    text-align: center;

    width: 100%;
    
}

.text_btn {
    z-index: 2;
   left: 5%;

    position: absolute;
    top: 1.5rem;
    color: #fff;
    line-height: 150rpx;
    text-align: center;
    width: 90%;
    height:150rpx;
    background: #25AEEB;
    justify-content: center;   
    border-radius: 14rpx;
    
}
.text input{
  margin: 0 auto;
  border-radius: 0.5rem;
  color: #000;
  height: 3rem;
  line-height: 3rem;
  font-size: 16px;
  width: 90%;
  border: 1rpx solid #25AEEB;
}




text {
    border-bottom: 2px solid #fff;
    font-size: 28px;
    padding-bottom: 6px;
}

.index-text {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.placeholder{
  color: #000;
}

.index-text text {
    display:flex;
    font-size:14px;
    align-items:center;
    border:none;
    justify-content:center;
    width:462rpx;
}

.index-text text:first-child {
    margin-top: 20rpx;
}

.index-text text:last-child {
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}
.login_btn{
  margin: 0 auto;
  margin-top: 0.5rem;
  margin-bottom: 0.5rem;
   width: 90%;
}

