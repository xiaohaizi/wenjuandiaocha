page {
    background: url(https://www.gmoai.top/Resources/index-background.jpg);
}

swiper {
    width: 100%;
    height: 400rpx;
    border-bottom: 20px;
}

swiper image {
    width: 100%;
    height: 100%;
}

.index-content {
    box-sizing: border-box;
    width: 100%;
    /* height: 360rpx; */
    /* padding: 0 20rpx; */
    display: flex;
    flex-direction: column;
}

.study {
    background: url(https://www.gmoai.top/Resources/study.jpg)no-repeat center /cover;
}

.explan {
    background: url(https://www.gmoai.top/Resources/introduce.jpg)no-repeat center /cover;
}

.start {
    background: url(https://www.gmoai.top/Resources/start.jpg)no-repeat center /cover;
}

.sign {
    background: url(https://www.gmoai.top/Resources/today.jpg)no-repeat center /cover;
}

.shadow {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.35);
    position: absolute;
    display: block;
    z-index: 1;
    border-radius: 10px;
}

.half {
    height: 280rpx;
    position: relative;
    margin: 30rpx;
    box-shadow: 0 0 5px #333;
    margin-bottom: 5px;
    border-radius: 10px;
}

/* 在text的外层盒子中使用display:flex + align-items:center + justify-content:center 使text的文字垂直居中显示 */

.text {
    z-index: 2;
    position: absolute;
    color: #fff;
    line-height: 280rpx;
    text-align: center;
    width: 100%;
}

text {
    border-bottom: 2px solid #fff;
    font-size: 28px;
    padding-bottom: 6px;
}

.index-text {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.index-text text {
    display:flex;
    font-size:14px;
    align-items:center;
    border:none;
    justify-content:center;
    width:462rpx;
}

.index-text text:first-child {
    margin-top: 20rpx;
}

.index-text text:last-child {
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}