<view class="container">
    <swiper autoplay="true">
        <swiper-item>
            <image src="{{banner_1}}"></image>
        </swiper-item>
       
    </swiper>
    <view class="index-content"  style="margin-top:1rem">
       
        <view class="start half">
            <view class="text" style="margin-top:1rem" >
              <input placeholder="请输入姓名" placeholder-class="placeholder" bindinput="realname_input"  value="{{realname}}"></input>
            </view>

             <view class="text"style="margin-top:5rem" >
              <input placeholder="请输入手机号码" placeholder-class="placeholder" bindinput="phone_input" value="{{phone}}"></input>
            </view>
            <view class="text_btn " style="margin-top:8rem" bindtap="start">
                <text  >开始答题</text>
            </view>           
            
        </view>
         <view class="text" class="login_btn"  >
            <button  wx:if="{{!hasUserInfo}}"  open-type="getUserInfo"  bindgetuserinfo="getUserInfo" style="margin-top:10px">
                立即登陆
            </button>
            </view>
    </view>   
    <view class="index-text">
       
    </view>
</view>